{% extends 'base.jinja' %}
{% block content %}
    <div class="edit__wrapper">
        <div class="edit__header orders__header">
            <h3>Add New Item To Menu</h3>
        </div>
        
        
        <div class="edit__form">
        <form action="/items" method="post">
            
            <label for="item_name">Item Name:</label>
            <input type="text" name="item_name" id="item_name" required>

            <label for="item_price">Price:</label>
            <input type="number" 
                id="item_price" 
                name="item_price" 
                min="1" 
                max="999" 
                step=".01"
                title="Maximum price limit is 999" required/>
        

            <button type="submit" class="save_button" onclick="return confirm('Confirm New Item ')">Add Item</button>
            
            </form>
        </div>
    </div>
{% endblock content %}

