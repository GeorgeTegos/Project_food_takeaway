{% extends 'base.jinja' %}
{% block content %}
    <div class="orders__wrapper">
        <div class="orders__header">
            <form action="/order/find", method="post">
                <input type="text" name="search" id="search">
                <button type="submit">Send</button>
            </form>
        </div>

        <div class="orders__main">
            <ul>
            {% for order in orders  %}
                <li class="li__for">
                    <ul class="ul__for">
                        <li class="line__text"><span>Order No:</span> {{ order.id }}</li>
                        <li class="line__text"><span>Customer:</span> {{ order.customer_name }}</li>
                        <li class="line__text"><span>Status:</span>
                        {% if order.order_delivered == False  %}
                            &#x2716;
                        {% else %}
                            &#x2714;
                        {% endif %}
                        </li>
                        <li><a href="/order/{{ order.id }}">Check order</a></li>
                        <li><a href="/order/{{order.id}}/add_items">Add</a></li>
                        <li><a href="/order/{{order.id}}/delete">Delete</a></li>

                    </ul>
                </li>
            {% endfor %}
            </ul>
        </div>
    </div>
{% endblock content %}