{% extends 'base.jinja' %}
{% block content %}
<div class="edit__wrapper">
    <div class="orders__header">
        <h3>New Order</h3>
    </div>

    <div class="edit__form">
        <form action="/orders" method="post">
        
            <label for="customer_name">Customer Name:</label>
            <input type="text" name="customer_name" pattern="[A-Za-z]{1,40}" title="No Space" id="customer_name" required>

            <label for="customer_phone">Phone:</label>
            <input type="text" id="customer_phone" name="customer_phone" 
                pattern="[0-9]{10}" title="Requires 10 numbers" required/>
        
            <label for="customer_address">Address</label>
            <input type="text" name="customer_address" id="customer_address" required>
            

            <button type="submit" class="save_button" onclick="return confirm('Confirm New Order!')">Send Order</button>
            
        </form>
    </div>
</div>

{% endblock content %}