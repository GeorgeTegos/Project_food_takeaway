{% extends 'base.jinja' %}{% block content %}
    <Div>
        <form action="/orders/{{order.id}}" method="post">
        <label for="customer_name">Customer Name:</label>
        <input type="text" name="customer_name" id="customer_name" value="{{order.customer_name}}">

        <label for="customer_phone">Phone:</label>
        <input type="text" id="customer_phone" name="customer_phone" 
            pattern="[0-9]{10}" title="Requires 10 numbers" value="{{phone}}"/>
    
        <label for="customer_address">Address</label>
        <input type="text" name="customer_address" id="customer_address" value="{{order.customer_address}}">

        {% for item in items  %}
            <label for="{{item.id}}">{{item.id}}, {{item.item_name}}</label>
            <input type="checkbox" name="test" id="test">
        {% endfor %}
        
        </select>

        <button type="submit">Edit Order</button>
        
        </form>
    </Div>
{% endblock content %}