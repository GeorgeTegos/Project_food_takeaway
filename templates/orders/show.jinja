{% extends 'base.jinja' %}
{% block content %}
    <div class="show__wrapper">
        <div class="show__left">
            <div class="show__id">
                <span>Order No: <span class="show__id__ID">{{ order.id }}</span></span>
            </div>
            
            <div class="show__infos">
                <ul>
                    <li>Customer Name  {{ order.customer_name }}</li>
                    <li>Phone {{ phone }}</li>
                    <li>Address{{ order.customer_address }}</li>
                    <li>Total £{{total }}</li>
                </ul>
                {# <span class="info_total"> {{ order.customer_name }}</span> #}
            </div>
        </div>
        

        <div class="show__right">
        <ul>
            {% for item in items  %}
                 <li> 
                    {{ item.item_name }},  £{{ item.item_price }}
                </li>   
            {% endfor %}
        </ul>
        </div>
    </div>
{% endblock content %}